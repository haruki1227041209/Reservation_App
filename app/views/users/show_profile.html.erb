<h1>4</h1>
<div class="profile-container">
  <div class="profile-header">
    <h1>プロフィール</h1>
    <p><%= link_to "編集", edit_profile_path(@user) %></p>
  </div>

  

  <div class="profile-content">
    <div class="profile-image">
      <% if @user.icon.present? %>
        <%= image_tag @user.icon, size: "100x100" %>
      <% else %>
        <%= image_tag "icon.png", size: "100x100" %>
      <% end %>
    </div>
    
    <div class="profile-info">
      <p>名前：<%= @user.name %></p>
      <p>自己紹介：<%= @user.bio %></p>
    </div>
  </div>

  <div class="profile-links">
    <table>
      <tr>
        <td><%= link_to 'アカウント', show_account_path(@user) %></td>
        <td><%= link_to 'プロフィール', show_profile_path(@user) %></td>
      </tr>
    </table>
  </div>
</div>

<p><%= link_to 'ログアウト', logout_path, method: :delete %></p>
<p><%= link_to '登録解除', unsubscribe_path(@user), method: :delete, data: { confirm: '本当に登録解除しますか？' } %></p>