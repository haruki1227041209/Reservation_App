<style>
  table {
    border-collapse: collapse;
    width: 100%;
  }

  th, td {
    padding: 8px;
    text-align: left;
    border-bottom: 1px solid #ddd;
  }

  th {
    background-color: #f2f2f2;
    font-weight: bold;
  }

  tr:hover {
    background-color: #f5f5f5;
  }

  .reservation-image {
    width: 100px;
    height: 50px;
    object-fit: cover;
  }
</style>

<h3>予約一覧</h3>

<table>
  <thead>
    <tr>
      <th>画像</th>
      <th>施設名</th>
      <th>紹介文</th>
      <th>合計料金</th>
      <th>チェックイン日</th>
      <th>チェックアウト日</th>
      <th>予約確定日時</th>
    </tr>
  </thead>

  <tbody>
    <% @reservations.each do |reservation| %>
      <tr>
        <td>
          <% if reservation.room.room_image.present? %>
            <%= image_tag reservation.room.room_image, class: "reservation-image" %>
          <% else %>
            <%= image_tag "room_image.png", class: "reservation-image" %>
          <% end %>
        </td>
        <td>
          <%= link_to reservation.room.room_name, reservation.room %>
        </td>
        <td>
          <%= reservation.room.description %>
        </td>
        <td>
          <%= reservation.payment_amount %>
        </td>
        <td><%= reservation.check_in_date.strftime("%Y/%m/%d") %></td>
        <td><%= reservation.check_out_date.strftime("%Y/%m/%d") %></td>
        <td><%= reservation.created_at.in_time_zone("Tokyo").strftime("%Y/%m/%d %H:%M") %></td>
      </tr>
    <% end %>
  </tbody>
</table>
