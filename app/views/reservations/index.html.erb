<h3>予約一覧</h3>
 
<table>
  <thead>
    <tr>
      <th>画像</th>
      <th>施設名</th>
      <th>紹介文</th>
      <th>合計料金</th>
      <th>チェックイン日</th>
      <th>チェックアウト日</th>
      <th>予約確定日時</th>
    </tr>
  </thead>

  <tbody>
    <% @reservations.each do |reservation| %>
      <tr>
      <td>
        <% if reservation.room.room_image.present? %>
          <%= image_tag @reservation.room.room_image, size: "100x50" %>
        <% else %>
          <%= image_tag "room_image.png", size: "100x50" %>
        <% end %>
      </td>
        <td>
        <%= link_to reservation.room.room_name, reservation.room %>
        </td>
        <td>
          <%= reservation.room.description %>
        </td>
        <td>
          <%= reservation.payment_amount %>
        </td>
        <td><%= reservation.check_in_date %></td>
        <td><%= reservation.check_out_date %></td>
        <td><%= reservation.created_at.to_s(:datetime_jp) %></td>
      </tr>
    <% end %>
  </tbody>
</table>